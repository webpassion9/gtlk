													tr
														td(style="width:27%") E-mail
														td(style="width:73%") kpatp-2@yandex.ru
													tr
														td(style="width:27%") Телефон
														td(style="width:73%") +7 (843) 262-06-76
										.application-main__row-col-sec
											.application-main__section
												.heading-base.heading-base--application Контактная информация
												table.info-table
													tbody
														tr
															td Менеджер
