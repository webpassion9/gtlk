										.form-base__item-main
											input(type="text" placeholder="Введите логин").input-base
									.form-base__item
										.form-base__item-heading
											.field-heading Пароль&nbsp;
												span.field-heading__require *
										.form-base__item-main
											input(type="password" placeholder="Введите пароль").input-base
									.form-base__item.form-base__item--submit
										input(type="submit" value="Предоставить доступ").btn.btn-save.btn--fullwidth


