											input(type="tel" placeholder="+7").input-base
									.form-base__item
										.form-base__item-heading
											.field-heading Почта&nbsp;
												span.field-heading__require *
										.form-base__item-main
											input(type="email" placeholder="Введите почту").input-base
									.form-base__item
										.form-base__item-heading
											.field-heading Логин&nbsp;
