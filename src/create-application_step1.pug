									li.form-steps__item
										.form-steps__item-text 
											span.is-lg-hidden Шаг 5: 
											|  Условия лизинга/аренды
									li.form-steps__item
										.form-steps__item-text 
											span.is-lg-hidden Шаг 6: 
											|  Дополнительные условия
									li.form-steps__item
										.form-steps__item-text 
											span.is-lg-hidden Шаг 7: 
											|  Загрузить документы
							.form-application__main
								.form-application__row-items.form-application__row-items--create-app
									.form-application__row
										.form-application__row-heading.form-application__row-heading--width-normal
											.field-heading Полное наименование организации&nbsp;
												span.field-heading__require *
										.form-application__row-content.form-application__row-content--width-medium
											textarea.input-base.input-base--textarea
									.form-application__row
										.form-application__row-heading.form-application__row-heading--width-normal
											.field-heading Фактический адрес&nbsp;
												span.field-heading__require *
										.form-application__row-content.form-application__row-content--width-medium
											textarea.input-base.input-base--textarea
									.form-application__row
										.form-application__row-heading.form-application__row-heading--width-normal
											.field-heading Телефон&nbsp;
												span.field-heading__require *
										.form-application__row-content.form-application__row-content--width-medium
											input(type="text").input-base
									.form-application__row
										.form-application__row-heading.form-application__row-heading--width-normal
											.field-heading E-mail&nbsp;
												span.field-heading__require *
										.form-application__row-content.form-application__row-content--width-medium
