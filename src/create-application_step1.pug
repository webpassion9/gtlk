										.form-application__row-content.form-application__row-content--width-medium
											input(type="text").input-base
									.form-application__row
										.form-application__row-heading.form-application__row-heading--width-normal
											.field-heading ИНН&nbsp;
												span.field-heading__require *
										.form-application__row-content.form-application__row-content--width-medium
											input(type="text").input-base
									.form-application__row
										.form-application__row-heading.form-application__row-heading--width-normal
											.field-heading КПП&nbsp;
												span.field-heading__require *
										.form-application__row-content.form-application__row-content--width-medium
											input(type="text").input-base
									.form-application__row
										.form-application__nav.form-application__nav--create-app
											a(href="#").btn.btn-nav.btn-nav--back Назад
											a(href="#").btn.btn-nav.btn-nav--continue Продолжить
											a(href="#").btn.btn-nav.btn-nav--save Сохранить


					footer.footer
						.container
							.footer__section.d-flex.justify-content-end
								ul.footer__menu
